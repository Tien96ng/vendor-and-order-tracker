@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1 class="text-center">Vendors</h1>
<h3>Current Available Vendor(s): @Model.Count</h3>

@if(@Model.Count == 0)
{
  <h5>No Current Vendors</h5>
}

@foreach (Vendor vendor in Model)
{
  <li>
    <a href="/vendor/@vendor.Id/order">@vendor.Name</a>
  </li>
}

<a href="/vendor/new" class="btn btn-success">Add Vendor</a>
<form action="/vendor/delete_all" method="post">
  <button type="submit" class="btn btn-danger">Delete All Vendors</button>
</form>