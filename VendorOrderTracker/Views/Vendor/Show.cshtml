@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendor: @Model["Vendor"].Name</h1>
<h5 class="description">@Model["Vendor"].Description</h5>

<h3>Current Available Orders: @Model["Orders"].Count</h3>



<div class="list-container">
  @if(@Model["Orders"].Count == 0)
  {
    <h5>No Current Orders</h5>
  }

  @if(@Model["Orders"].Count > 0)
  {
    <ol>
      @foreach (Order order in @Model["Orders"])
      {
        <li><a href='/vendor/@Model["Vendor"].Id/order/@order.Id'>@order.Name</a></li>
      }
    </ol>
  }
</div>

<div class="action-container">
  
  <a href='/vendor' class="btn btn-primary">View All Vendors</a>
  <br />
  <a href='/vendor/@Model["Vendor"].Id/order/new' class="btn btn-success">Add a new Order</a>

  <form action='/vendor/@Model["Vendor"].Id/delete_all_orders' method="POST">
    <input type="hidden" value='@Model["Vendor"].Id' name="id">
    <button type="submit" class="btn btn-danger">Delete All Orders</button>
  </form>
  <form action="/vendor/delete" method="POST">
    <input type="hidden" value='@Model["Vendor"].Id' name="id">
    <button type="submit" class="btn btn-warning">Delete Current Vendor</button>
  </form>
</div>
