@using VendorOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1 class="text-center">Vendors</h1>
<h3>Current Available Vendor(s): @Model.Count</h3>

<div class="list-container">
  @if(@Model.Count == 0)
  {
    <h5>No Current Vendors</h5>
  }

  @foreach (Vendor vendor in Model)
  {
    <li>
      <a href="/vendors/@vendor.Id">@vendor.Name</a>
    </li>
  }
</div>

<div class="action-container">
  <a href="/vendors/new" class="btn btn-success">Add Vendor</a>
  <form action="/vendors/delete_all" method="post">
    <button type="submit" class="btn btn-danger">Delete All Vendors</button>
  </form>
</div>