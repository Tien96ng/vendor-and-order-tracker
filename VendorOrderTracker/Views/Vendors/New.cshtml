@{
  Layout = "_Layout";
}


<h1>Add a new Vendor</h1>

<div class="form-container">
  <form action="/vendors" method="POST">
  <div class="form-group">
    <label for="name">Name </label>
    <input type="text" name="name" id="name" required class="form-control"> 
  </div>
  
  <div class="form-group">
    <label for="description">Description </label> <br/>
    <textarea id="description" name="description" rows="3" required class="form-control"></textarea>
  </div>
  
  <button type="submit" class="btn btn-success submit-btn">Add Vendor</button>
</form>
</div>
